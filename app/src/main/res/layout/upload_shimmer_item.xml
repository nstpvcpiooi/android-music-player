<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="12dp"
    android:paddingEnd="5dp"
    android:paddingStart="23dp">

    <!-- Thumbnail placeholder matching 48dp image -->
    <View
        android:id="@+id/shimmer_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="#E0E0E0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/shimmer_image"
        android:layout_toStartOf="@+id/shimmer_more_button"
        android:layout_marginStart="16dp"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <!-- Song title placeholder -->
        <View
            android:layout_width="160dp"
            android:layout_height="16dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="6dp" />

        <!-- Song info placeholder -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="80dp"
                android:layout_height="12dp"
                android:background="#E0E0E0" />

            <View
                android:layout_width="4dp"
                android:layout_height="12dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="@android:color/transparent" />

            <View
                android:layout_width="40dp"
                android:layout_height="12dp"
                android:background="#E0E0E0" />
        </LinearLayout>
    </LinearLayout>

    <!-- More button placeholder -->
    <View
        android:id="@+id/shimmer_more_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent" />

</RelativeLayout>
