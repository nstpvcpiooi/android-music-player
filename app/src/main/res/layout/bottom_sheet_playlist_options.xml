<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorSurfaceContainerLowest"
    app:behavior_peekHeight="256dp"
    style="?attr/bottomSheetStyle">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:id="@+id/drag_handle"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:tint="?attr/colorOnSurfaceVariant" />

    <!-- Add to Queue Option -->
    <LinearLayout
        android:id="@+id/addToQueueOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/add_to_queue_icon"
            app:tint="?attr/colorOnSurfaceVariant"
            android:layout_marginEnd="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add to Queue"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurface" />
    </LinearLayout>

    <!-- Play Next Option -->
    <LinearLayout
        android:id="@+id/playNextOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/queue_top_icon"
            app:tint="?attr/colorOnSurfaceVariant"
            android:layout_marginEnd="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play Next"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurface" />
    </LinearLayout>

    <!-- Shuffle Option -->
    <LinearLayout
        android:id="@+id/shuffleOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/shuffle_icon"
            app:tint="?attr/colorOnSurfaceVariant"
            android:layout_marginEnd="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shuffle Play"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurface" />
    </LinearLayout>

    <!-- Delete Option -->
    <LinearLayout
        android:id="@+id/deleteOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/delete_icon"
            app:tint="?attr/colorError"
            android:layout_marginEnd="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Playlist"
            android:textSize="16sp"
            android:textColor="?attr/colorError" />
    </LinearLayout>
</LinearLayout>
